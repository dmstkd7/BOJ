#define _CRT_SECURE_NO_WARNINGS
#include <cstdio>
#include <algorithm>
using namespace std;


// D[i][j] = i칸 j열에서 최대값
// D[i][j] = max(D[i+1][j], D[i+1][j+1]) + W[i][j]


int D[501][501];
int W[501][501];
int N;

int go(int x,int y){
	if (y > N)
		return 0;
	else{
		if (D[x][y] > 0)
			return D[x][y];

		D[x][y] = max(go(x, y + 1), go(x + 1, y + 1)) + W[x][y];
		return D[x][y];
	}

}


int main(void){

	int tmp;
	scanf("%d", &N);
	
	//입력파트
	for (int i = 1; i <= N; i++){
		for (int j = 1; j <= i; j++){
			scanf("%d", &tmp);
			W[j][i] = tmp;
		}
	}

	printf("%d", go(1,1));


	return 0;
}
